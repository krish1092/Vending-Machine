@model List<VendingMachineKata.Models.Product>

@using VendingMachineKata.Models;

<style>
// Just an empty class useful for hierarchy
.product{
}

</style>

@foreach (Product p in @Model)
{
    <div class="col-md-@(12/Model.Count) ">
        <div class="row">
            <h3>@p.DisplayProduct</h3>
        </div>
        <div class="row">
            <button onclick="vend(this)" class="btn btn-primary product" value="Select" data-product-name="@p.ProductName" data-product-price="@p.ProductPrice">Select</button>
        </div>
    </div>
}